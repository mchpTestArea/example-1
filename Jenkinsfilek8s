pipeline {
    agent {
        kubernetes {
            label 'relative'
			defaultContainer 'xc8-mplabx'
            yamlFile 'cloudprovider.yml'
        }
    }
	 stages {
        stage('Checkout') {
            steps {
				checkout scm
            }
        }
		stage('base') {
			steps {
				script {
					execute("git clone https://bitbucket.microchip.com/scm/~i15784/base.git")
					execute("ls")
					load 'base/Jenkinsfilek8s'
				}
			}
		}
	}
}	
def execute(String cmd) {
	if(isUnix()) {
		sh cmd
	} else {
		bat cmd
	}
}